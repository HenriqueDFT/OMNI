# -- NAME & LABEL --

SystemName       Gr
SystemLabel      Gr

# -- MATERIAL --

NumberOfAtoms    2
NumberOfSpecies  1
%block ChemicalSpeciesLabel
 1    6   C_gga
%endblock ChemicalSpeciesLabel

# -- CELL-ATOMIC-POSITION --

LatticeConstant 1.00  Ang
%block LatticeVectors
   2.130424    1.2300000    0.000000
   2.130424   -1.2300000    0.000000
   0.000000    0.0000000    20.00000
%endblock LatticeVectors
AtomicCoordinatesFormat NotScaledCartesianAng
AtomCoorFormatOut   NotScaledCartesianAng
%block AtomicCoordinatesAndAtomicSpecies
  0.0000000000000000        0.0000000000000000        0.0000000000000000 1 
  1.4280000000000000        0.0000000000000000        0.0000000000000000 1 
%endblock AtomicCoordinatesAndAtomicSpecies         

# -- MONKHORST-PACK --
#kgrid.Cutoff                          90.0 Ang
%block kgrid_Monkhorst_Pack
15   0   0   0.0
0   15   0   0.0
0   0   1   0.0
%endblock kgrid_Monkhorst_Pack

# -- SELF-CONSISTENT FIELD --

MeshCutoff                            450.0 Ry
PAO.BasisSize                         DZP
PAO.EnergyShift                       0.05 eV
XC.Functional                         GGA
XC.Authors                            PBE
MaxSCFIterations                      400
SolutionMethod                        diagon
%block PAO.Basis
C_gga 3
n=2 0 2 E 40 -0.9
5.94869034392 2.5090419
n=2 1 2 E 40 -0.9
7.63838693570 2.6226139
n=2 2 1 E 40 -0.9 Q 6.4005365 .0100000
7.63838693570
%endblock PAO.Basis


# -- SELF-CONSISTENT FIELD-MIXING --

DM.MixingWeight                       0.10
DM.NumberPulay                        3
DM.Tolerance                          1.d-6         
DM.Require.Energy.Convergence         true 
DM.Energy.Tolerance                   1.d-5 eV

# -- MOLECULAR DYNAMICS-CONJUGATE-GRADIENT-METHOD --

MD.TypeOfRun                          CG
MD.NumCGsteps                         700
MD.MaxForceTol                        0.01 eV/Ang
MD.UseSaveXV                          true
MD.UseSaveCG                          true
MD.VariableCell                       true
MD.MaxStressTol                       0.1 GPa
WriteMDHistory                        true
WriteMDXmol                           true

# -- TARGET STRESS OPTIONS --

MD.TargetPressure                     0.0 GPa
%block MD.TargetStress
1.0 1.0 1.0 0.0 0.0 0.0
%endblock MD.TargetStress

# -- SPIN FIELD --

