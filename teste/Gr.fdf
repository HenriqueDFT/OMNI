UseSaveData           	              true
LongOutput           	                true

# -- SAVING WAVE/BAND/EIGEN/KPOINTS/ANIMATION INFORMATION --

WriteMullikenPop	                    1
WriteHirshfeldPop                     true
WriteVoronoiPop                       true
#WriteKbands                           true
